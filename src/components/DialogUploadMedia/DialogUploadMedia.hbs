{{#Dialog open=isOpen}}
<form method="dialog">
    <h4>Загрузить изображение</h4>
    {{{ FileInput ref="fileInput" }}}    
    {{{ ApiErrorMessage }}}
    <div>
        {{{ ChatButton
        label="Загрузить"
        type="submit"
        style="primary"
        onClick=onSubmitMedia
        }}}
        {{{ ChatButton
        label="Отменить"
        type="button"
        style="secondary"
        onClick=onClose
        }}}
    </div>
</form>
{{/Dialog}}

<div class="chat-header">
    {{{ChatAvatar size="small" src=avatar alt="Selected chat avatar picture"}}}
    <span class="chat-header__text">
        {{title}}
    </span>
    {{{ChatButton className='chat-header__button__add-user' type='button' onClick=onAddUser}}}
    {{{ChatButton className='chat-header__button__remove-user' type='button' onClick=onRemoveUser}}}
    {{{ChatButton className='chat-header__button__delete-chat' type='button' onClick=onDeleteChat}}}
</div> 

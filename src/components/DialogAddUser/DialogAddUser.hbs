{{#Dialog open=isOpen}}
<form method="dialog">
    <h4>Добавить пользователя в чат</h4>
    {{{ ChatFormField label="ID пользователя" name="add_user_id" ref="addUserID" isActive="true" }}}
    {{{ ApiErrorMessage }}}
    <div>
        {{{ ChatButton
        label="Добавить"
        type="submit"
        style="primary"
        onClick=onAddUser
        }}}
        {{{ ChatButton
        label="Отменить"
        type="button"
        style="secondary"
        onClick=onClose
        }}}
    </div>
</form>
{{/Dialog}}
